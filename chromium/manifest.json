{
	"manifest_version": 2,
	"name": "Doublespeak",
	"description": "Encodes/decodes messages as zero-width Unicode characters in text, as a casual form of steganography. Optimized for real time chat.",
	"version": "2017.8.16",
	"icons": {
		"192": "images/icon-192.png"
	},
	"background": {
		"scripts": [
			"lib/doublespeak.min.js",
			"background.js"
		]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"all_frames": true,
		"js": ["content.js"]
	}],
	"browser_action": {
		"default_icon": "images/icon-192.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"contextMenus",
		"clipboardRead",
		"clipboardWrite"
	]
}
